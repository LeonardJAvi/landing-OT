    %section.content
      .fix-nav
      %section#cover-image
        .container-fluid
          .row
            .col-xs-12.col-sm-12.col-md-12
              .cover-city
                %img.img-responsive{:src => @destination.banner}/
                .mask-cover-city
                  %h1.title-cover-city= @destination.name
                  .info-cover-city
                    %span.info-cover-city= @destination.subtitle
      %section#planes
        .container-fluid
          .col-xs-12.col-sm-12.col-md-12.col-lg-3
            .box-select
              .select-items
                %h3#title-item Tú eliges
                %ul#items-select.filters
                  %li
                    .radio
                      %label
                        %input.option{:checked => "checked", "data-filter" => "*", :name => "filter", :type => "radio", :value => "*"}/
                        Todos
                  %li
                    .radio
                      %label
                        %input{"data-filter" => ".plan", :name => "filter", :type => "radio", :value => ".plan"}/
                        Planes
                  %li
                    .radio
                      %label
                        %input{"data-filter" => ".hotel", :name => "filter", :type => "radio", :value => ".hotel"}/
                        Hoteles
                  %li
                    .radio
                      %label
                        %input{"data-filter" => ".actividad", :name => "filter", :type => "radio", :value => ".actividad"}/
                        Actividades
                #box-price
                  %h5.item Precio
                  = search_form_for @q, url: "/destination/#{@destination.slug}/#{@currency}", html: { class: "form-horizontal", method: :get } do |f|
                    %input.form-control.input-sm.price-form.item-price{:placeholder => "Mínimo", :type => "text"}/
                    %input.form-control.input-sm.price-form.item-price{:placeholder => "Máximo", :type => "text"}/
                    %button.btn.btn-default.btn-price{:type => "submit"} Buscar
                #box-search
                  %h5.item Encuentra tú destino

                  = search_form_for @q, url: "/destination/#{@destination.slug}/#{@currency}", html: { class: "form-horizontal", method: :get } do |f|
                    .input-group
                      = f.text_field :destination_id_start, value: @destination.id, style: 'display:none'
                      -# = f.search_field @search_field
                      %input#q_name_cont.form-control.input-sm{name: 'q[title_cont]', :placeholder => "¿Qué deseas buscar?", :type => "text"}/
                      %span.input-group-btn
                        %button.btn.btn-default.search-btn.btn-sm{:type => "submit"}
                          %i.glyphicon.glyphicon-search

          .col-xs-12.col-sm-12.col-md-12.col-lg-9
            %h2.title-promocion
              = "#{@plans.count} planes, #{@hotels.count} hoteles y #{@activities.count} actividades disponibles para ti"
            .portfolioContainer
              - @hotels.each do |hotel|
                .col-xs-12.col-sm-6.col-md-6.col-lg-4.hotel
                  .box-cards
                    .card
                      .card-image
                        %img.img-responsive{:src => hotel.banner}/
                      .card-content
                        .col-xs-12.col-sm-12.col-md-12.col-lg-12
                          %span.card-title= hotel.title
                          %span.item-card= "#{hotel.days} días"
                        .col-xs-12.col-sm-12.col-md-12.col-lg-12
                          .card-price-button
                            %span.price-card= "desde $#{hotel.price["#{@currency}"]} #{@currency.upcase}"
                            %a.button-omni.omnitours{:href => hotel.url, :target => "_blank"} Quiero ir
              - @plans.each do |plan|
                .col-xs-12.col-sm-6.col-md-6.col-lg-4.plan
                  .box-cards
                    .card
                      .card-image
                        %img.img-responsive{:src => plan.banner}/
                      .card-content
                        .col-xs-12.col-sm-12.col-md-12.col-lg-12
                          %span.card-title= plan.title
                          %span.item-card= "#{plan.days} días"
                        .col-xs-12.col-sm-12.col-md-12.col-lg-12
                          .card-price-button
                            %span.price-card= "desde $#{plan.price["#{@currency}"]} #{@currency.upcase}"
                            %a.button-omni{:href => plan.url, :target => "_blank"} Quiero ir
              - @activities.each do |activity|
                .col-xs-12.col-sm-6.col-md-6.col-lg-4.actividad
                  .box-cards
                    .card
                      .card-image
                        %img.img-responsive{:src => activity.banner}/
                      .card-content
                        .col-xs-12.col-sm-12.col-md-12.col-lg-12
                          %span.card-title= activity.title
                          %span.item-card= "#{activity.days} días"
                        .col-xs-12.col-sm-12.col-md-12.col-lg-12
                          .card-price-button
                            %span.price-card= "desde $#{activity.price["#{@currency}"]} #{@currency.upcase}"
                            %a.button-omni.omnitours{:href => activity.url, :target => "_blank"} Quiero ir
